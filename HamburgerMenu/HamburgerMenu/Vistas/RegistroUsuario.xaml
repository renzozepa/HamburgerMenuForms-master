<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HamburgerMenu.Vistas.RegistroUsuario"
             Visual="Material">
    <ScrollView>
        <StackLayout>
            <Label Text="Nombre: "/>
            <Entry Placeholder="Introduce tu nombre" x:Name="Nombre"/>
            <Label Text="Usuario: "/>
            <Entry Placeholder="Escribe tu usuario" Keyboard="Email" x:Name="Usuario"/>
            <Label Text="Contraseña: "/>
            <Entry Placeholder="Elige una contraseña" IsPassword="True" x:Name="Contrasenia"/>
            <Label Text="Confirmar contraseña: "/>
            <Entry Placeholder="Confirmar contraseña" IsPassword="True" x:Name="Conf_Contrasenia"/>
            <Label Text="Tareador: "/>
            <Entry Placeholder="Introduce tareador" x:Name="Tareador"/>
            <Label Text="Nro. Celular: "/>
            <Entry Placeholder="Introduce Nro. Celular" x:Name="Celular"/>
            <Button Text="Agregar" Clicked="Btn_agregar" BackgroundColor="#E6002B"></Button>
        </StackLayout>
    </ScrollView>
</ContentPage>